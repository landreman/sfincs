!   Settings specific to scanType = 3:
!ss scanVariable = min_Bmn_to_load
!ss scanVariableMin = 1e-6
!ss scanVariableMax = 1e-3
!ss scanVariableN = 5
!ss scanVariableScale = log

&general
  saveMatricesAndVectorsInBinary = .t.
/

&geometryParameters
  geometryScheme = 1   ! General analytic 3-helicity model

  inputRadialCoordinate = 3    ! rN
  rN_wish = 0.3

  B0OverBBar = 1.0d+0
  GHat = 1.0d+0
  IHat = 0.0d+0
  iota = 1.31d+0
  epsilon_t = 0.1d+0
  epsilon_h = 0.0d+0
  helicity_l = 1
  helicity_n = 1
  epsilon_antisymm = 0.0d+0
  helicity_antisymm_l = 3	
  helicity_antisymm_n = 0
  psiAHat = 0.045d+0
  aHat = 0.1
/

&speciesParameters
  Zs = 1
  mHats = 1
  nHats = 1.0d+0
  THats = 0.5d+0
  dNHatdrHats = -6.0d+0
  dTHatdrHats = -3.0d+0
/

&physicsParameters
  Delta = 4.5694d-3
  alpha = 1.0d+0
  nu_n = 8.4774d-3

  Er = -30.0

  collisionOperator = 0

  includeXDotTerm = .false.
  includeElectricFieldTermInXiDot = .false.
  useDKESExBDrift = .true.
  includePhi1 = .false.
/

&resolutionParameters
  Ntheta = 21
!ss NthetaMinFactor = 0.7
!ss NthetaMaxFactor = 2
!ss NthetaNumRuns = 5

  Nzeta = 1
!ss NzetaMinFactor = 0.8
!ss NzetaMaxFactor = 2
!ss NzetaNumRuns = 5

  Nxi = 31
!ss NxiMinFactor = 0.8
!ss NxiMaxFactor = 2
!ss NxiNumRuns = 6
  
  Nx = 8
!ss NxMinFactor = 0.8
!ss NxMaxFactor = 2
!ss NxNumRuns = 3

  solverTolerance = 1d-12
!ss solverToleranceMinFactor = 0.1
!ss solverToleranceMaxFactor = 10
!ss solverToleranceNumRuns = 3
/

&otherNumericalParameters
/

&preconditionerOptions
  ! Since the matrix size in this problem is so small, we can afford to make the preconditioner the same as the system matrix.
  preconditioner_species = 0
  preconditioner_x = 0
  preconditioner_xi = 0
/

&export_f
  export_full_f = .true.
  export_delta_f = .true.

  export_f_theta_option = 1
